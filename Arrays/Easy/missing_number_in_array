// Using Summation
class Solution {
    public int missingNumber(int[] nums) {
        int len = nums.length;
        int sum = 0;
        int total = (len * (len + 1)) / 2;
        
        for (int num : nums) {
            sum += num;
        }

        return total - sum;
    }
}

// Using XOR - [Better space complexity for larger arrays]
class Solution {
    public int missingNumber(int[] nums) {
        int n = nums.length;
        int xor1 = 0;
        int xor2 = 0;
        for (int i = 0; i < n; i++) {
            xor1 = xor1 ^ nums[i];
            xor2 = xor2 ^ i;
        }
        xor2 = xor2 ^ n;
        return xor1 ^ xor2;
    }
}